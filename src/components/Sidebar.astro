---
import { getCollection } from 'astro:content';
import { CATEGORY_META, CATEGORY_ORDER } from '../content/categories';
import { withBase } from '../utils/paths';

// Get post counts for each category
const posts = await getCollection('posts');
const publishedPosts = posts.filter(p => !p.data.draft);

const categoryCounts = CATEGORY_ORDER.map((category) => ({
  slug: category,
  label: CATEGORY_META[category].label,
  count: publishedPosts.filter((post) => post.data.category === category).length,
}));

// Calculate archive years
const years = [...new Set(publishedPosts.map(p => p.data.pubDate.getFullYear()))].sort((a, b) => b - a);

const currentPath = Astro.url.pathname;

function isActive(path: string): boolean {
  if (path === withBase()) {
    return currentPath === withBase() || currentPath === '/portfolio/' || currentPath === '/portfolio';
  }
  return currentPath.startsWith(path);
}

function isCategoryActive(category: string): boolean {
  return currentPath.includes(`/${category}/`);
}
---

<aside class="sidebar" id="sidebar">
  <div class="sidebar-header">
    <a href={withBase()} class="site-brand">
      <span class="brand-name">Sergio B.</span>
      <span class="brand-tagline">Infrastructure · AI · Cloud</span>
    </a>
  </div>

  <nav class="sidebar-nav">
    <div class="nav-section">
      <div class="nav-section-title">Navigation</div>
      <ul class="nav-list">
        <li class="nav-item">
          <a href={withBase()} class:list={['nav-link', { active: isActive(withBase()) }]}>
            <span>Home</span>
          </a>
        </li>
        <li class="nav-item">
          <a href={withBase('archive/')} class:list={['nav-link', { active: isActive(withBase('archive/')) }]}>
            <span>Archive</span>
          </a>
        </li>
        <li class="nav-item">
          <a href={withBase('about/')} class:list={['nav-link', { active: isActive(withBase('about/')) }]}>
            <span>About</span>
          </a>
        </li>
      </ul>
    </div>

    <div class="nav-section">
      <div class="nav-section-title">Categories</div>
      <ul class="nav-list">
        {categoryCounts.map((cat) => (
          <li class="nav-item">
            <a 
              href={withBase(`${cat.slug}/`)} 
              class:list={['nav-link', `category-${cat.slug}`, { active: isCategoryActive(cat.slug) }]}
            >
              <span>{cat.label}</span>
              <span class="count">{cat.count}</span>
            </a>
          </li>
        ))}
      </ul>
    </div>

    {years.length > 0 && (
      <div class="nav-section">
        <div class="nav-section-title">Archive</div>
        <ul class="nav-list">
          {years.slice(0, 5).map((year) => (
            <li class="nav-item">
              <a href={withBase('archive/')} class="nav-link">
                <span>{year}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    )}
  </nav>

